import 'dart:io';

void main() {
 
  stdout.write('Digite a temperatura em Fahrenheit: ');
  double fahrenheit = double.parse(stdin.readLineSync()!);
  
  double celsius = (fahrenheit - 32) / 1.8;
  print('${fahrenheit.toStringAsFixed(2)}째F em Celsius: ${celsius.toStringAsFixed(2)}째C');
  
  stdout.write('Digite a temperatura em Celsius: ');
  double celsius2 = double.parse(stdin.readLineSync()!);
  
  double fahrenheit2 = (celsius2 * 1.8) + 32;
  print('${celsius2.toStringAsFixed(2)}째C em Fahrenheit: ${fahrenheit2.toStringAsFixed(2)}째F');
}
